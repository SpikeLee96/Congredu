                        <li><a href="/sobre">Sobre</a></li>
                        <li><a href="/comissoes">Comissões</a></li>
                      </ul>
                    </li>


                    <li class="dropdown"><a href="#" class="dropdown-toggle " data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">Inscrições <i class="fa fa-angle-down"></i></a>
                      <ul class="dropdown-menu">
                        <li><a href="/normas-de-inscricoes">Normas</a></li>
                        <li><a href="/cadastro">Formulário de inscrição</a></li>
                      </ul>
                    </li>


                    <li class="dropdown"><a href="#" class="dropdown-toggle " data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">Trabalhos <i class="fa fa-angle-down"></i></a>
                      <ul class="dropdown-menu">
                        <li><a href="/normasanais">Normas para anais</a></li>
                        <li><a href="/normasebook">Normas para e-books</a></li>
                      </ul>
                    </li>

                    <li class="dropdown"><a href="/programacao" class="dropdown-toggle ">Programação</a>
                    </li>

                    <li class="dropdown"><a href="/contato" class="dropdown-toggle ">Contato</a>
                    </li>

                    <table class="navbar navbar-default navbar-static-top" style="border: none;">
                      <tr>
                        <td>
                          <div id="entrar" >
                            <form class="" action="/entrar" method="post">
                              <li class="dropdown"><input type="submit" value="Entrar" class="dropdown-toggle">
                              </li>
                            </form>
                          </div>
                        </td>
                        <td>
                          <div hidden id="log">
                            <form class="" action="/logado" method="post">
                              <li class="dropdown"><input type="submit" value="Perfil" class="dropdown-toggle">
                              </li>
                            </form>
                          </div>
                        </td>
                        <td>
                          <div hidden id="out">
                            <form class="" action="/deslogado" method="post">
                              <li class="dropdown"><input type="submit" value="Sair" class="dropdown-toggle">
                              </li>
                            </form>
                          </div>
                        </td>
                      </tr>
                    </table>

                    <script type="text/javascript">
                      {{#if logado}}
                        document.getElementById("log").hidden = false;
                        document.getElementById("out").hidden = false;
                        document.getElementById("entrar").hidden = true;
                      {{else}}
                        document.getElementById("log").hidden = true;
                        document.getElementById("out").hidden = true;
                        document.getElementById("entrar").hidden = false;
                      {{/if}}
                    </script>
                  </ul>
                </div>
              </div>
            </div>
